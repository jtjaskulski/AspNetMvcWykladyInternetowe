@model Company.Data.Data.Shop.Order

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_CartLayout.cshtml";
}


<div class="container">
    <br><br>
    <h1 class="header center orange-text">Witam w podsumowaniu Twojego zamówienia!</h1>
